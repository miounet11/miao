{
  "name": "settings-webview",
  "displayName": "Settings Webview",
  "description": "Beautiful settings UI for Miaoda IDE configuration",
  "version": "0.1.0",
  "publisher": "miaoda",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "miaoda.settings.open",
        "title": "Open Settings",
        "category": "Miaoda",
        "icon": "$(settings-gear)"
      },
      {
        "command": "miaoda.settings.quickSetup",
        "title": "Quick Setup Wizard",
        "category": "Miaoda",
        "icon": "$(wand)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "miaoda-settings",
          "title": "Miaoda Settings",
          "icon": "resources/settings-icon.svg"
        }
      ]
    },
    "views": {
      "miaoda-settings": [
        {
          "type": "webview",
          "id": "miaoda.settingsPanel",
          "name": "Settings"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "webpack --mode production",
    "watch": "npm run watch:extension & npm run watch:webview",
    "watch:extension": "tsc -watch -p ./",
    "watch:webview": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.85.0",
    "css-loader": "^6.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.3.3",
    "webpack": "^5.77.0",
    "webpack-cli": "^5.0.1"
  }
}
